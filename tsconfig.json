{
  "compilerOptions": {
    "skipLibCheck": true,
    "incremental": true,
    "declaration": false,
    "declarationMap": false,
    "removeComments": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "ignoreDeprecations": "5.0",
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "noImplicitUseStrict": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "exclude": [
    "node_modules/**/*"
  ],
  "include": [
    "src/**/*"
  ]
}
